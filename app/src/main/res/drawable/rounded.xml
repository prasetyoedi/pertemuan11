<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape>
            <solid android:color="#D3D3D3" /> <!-- Warna abu-abu untuk bayangan -->
            <corners android:radius="10dp" /> <!-- Radius sudut bulat -->
        </shape>
    </item>

    <!-- Background (Rounded Rectangle) -->
    <item android:left="0.7dp" android:top="1dp" android:right="2dp" android:bottom="2dp">
        <shape>
            <solid android:color="@color/white" /> <!-- Warna latar belakang putih -->
            <corners android:radius="10dp" /> <!-- Radius sudut bulat yang sama dengan bayangan -->
        </shape>
    </item>
</layer-list>